{% extends 'base.html.twig' %}
{%  block body %}
    <div class="container text-dark text-center">
        <h1>Tv Show : {{ program.title }}</h1>
            <img src="{{ program.poster }}" alt="{{ program.title }} poster">
                <ul>
                    {% for episode in episodes %}
                        <div>
                            <p>{{ episode.number }} - {{ episode.title }}</p>
                            <p>{{ episode.synopsis }}</p>
                            <a href="{{ path("program_episode_show", {program: program.id, season: season.id, episode: episode.id}) }}">Watch this episode</a>
                        </div>
                    {% endfor %}
                </ul>
        <div>
            <a href="{{ path("program_show", {program: program.id}) }}">Watch the Tv Show</a>
        </div>
        <div>
            <a href="{{ path('program_index') }}">Back to program's</a>
        </div>
    </div>
{% endblock %}