{% extends 'base.html.twig' %}

{% block title %}Tv Show #{{ program.id }}{% endblock %}

{% block body%}

    <div class="container text-center">
        <div class="media">
            <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
                <div class="media-body">
                    <h1 class="mt-0">{{ program.title }}</h1>
                        <p>Category : {{ program.category.name }}</p>
                        <p>{{ program.summary }}</p>
                            <a href="{{ path('program_show_season', {program: program.id, season: program.id}) }}">Seasons</a>
                </div>
        </div>
        <div>
            <a href="{{ path('program_index') }}">Back to program's</a>
        </div>
    </div>
{% endblock %}